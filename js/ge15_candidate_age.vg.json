{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
   "width": "container",
  "height": 200,
  "autosize": {"type": "fit-x", "resize": true},

  "data": {
    "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-DataVisualisation2/refs/heads/main/data/ge15_candidate_summary.csv"
  },

  "transform": [
    {
      "fold": [
        "18-20","21-29","30-39","40-49",
        "50-59","60-69","70-79","80-89","Above 90"
      ],
      "as": ["age_group","count"]
    },
    {"window": [{"op": "sum", "field": "count", "as": "total"}], "frame": [null, null]},
    {"calculate": "datum.count / datum.total", "as": "pct"},
    {
      "calculate": "datum.age_group === 'Above 90' ? '90+' : datum.age_group",
      "as": "age_label"
    },
    {"joinaggregate": [
      {"op": "max", "field": "pct", "as": "max_pct"},
      {"op": "min", "field": "pct", "as": "min_pct"}
    ]},
    {
      "calculate": "datum.pct === datum.max_pct || datum.pct === datum.min_pct ? 'Extreme' : ''",
      "as": "flag"
    }
  ],

  "layer": [
    {
      "mark": {"type": "bar", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3, "width":20},
      "encoding": {
        "x": {
          "field": "age_label", "type": "ordinal",
          "sort": ["18-20","21-29","30-39","40-49","50-59","60-69","70-79","80-89","90+"],
          "axis": {"title": "Age Group"}
        },
        "y": {
          "field": "count", "type": "quantitative",
          "title": "Candidates",
          "axis": {"grid": true}
        },
        "color": {
          "condition": {"test": "datum.flag !== ''", "value": "#88419d"},
          "value": "#bdbdbd"
        },
        "tooltip": [
          {"field": "age_group", "title": "Age group"},
          {"field": "count", "type": "quantitative", "title": "Candidates Count", "format": ","},
          {"field": "total", "type": "quantitative", "title": "Total Candidates", "format": ","},
          {"field": "pct", "type": "quantitative", "title": "Percentage of Candidates", "format": ".2%"}
        ]
      }
    }
  ],

  "config": {"view": {"stroke": null},
    "axis": {
        "titleFontSize": 12,
        "labelFontSize": 11,
        "titlePadding": 8,
        "domain": false,
        "tickSize": 3,
        "gridColor": "#e5e7eb",
        "labelFont": "Nunito",
        "labelFontWeight": 300,
        "titleFont": "Nunito",
        "titleFontWeight": 600
        }
}
}