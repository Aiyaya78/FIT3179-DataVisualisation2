{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
  "height": 200,
  "autosize": {"type": "fit-x", "resize": true},

  "data": {
    "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-DataVisualisation2/refs/heads/main/data/ge15_national.csv"
  },

  "transform": [
    {
      "fold": [
        "Bumiputera","Chinese","Indians","Others"
      ],
      "as": ["ethnicity","count"]
    },

    {
      "calculate": "datum.ethnicity === 'Bumiputera' ? 'Indigenous' :  datum.ethnicity === 'Indians' ? 'Indian' : datum.ethnicity",
      "as": "ethnicity_en"
    },

    {"window": [{"op": "sum", "field": "count", "as": "total"}], "frame": [null, null]},
    {"calculate": "datum.count / datum.total", "as": "pct"},

    {"joinaggregate": [
      {"op": "max", "field": "pct", "as": "max_pct"}
    ]},
    {
      "calculate": "datum.pct === datum.max_pct ? 'Extreme' : ''",
      "as": "flag"
    }
  ],

  "layer": [
    {
      "mark": {"type": "bar", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3, "width":20},
      "encoding": {
        "x": {
          "field": "ethnicity_en",          
          "type": "nominal",
          "sort": {"field": "count", "order": "descending"},
          "axis": {"title": "Ethnicity", "labelAngle": 0, "titlePadding":20}
        },
        "y": {
          "field": "count",
          "type": "quantitative",
          "title": "Voters",
          "axis": {"grid": true, "format": "s"}
        },

        "color": {
          "condition": {"test": "datum.flag !== ''", "value": "#e7298a"},
          "value": "#bdbdbd"
        },

        "tooltip": [
          {"field": "ethnicity_en", "title": "Ethnicity"},
          {"field": "count", "type": "quantitative", "title": "Electors Count", "format": ","},
          {"field": "pct", "type": "quantitative", "title": "Percentage of Electors", "format": ".2%"},
          {"field": "total", "type": "quantitative", "title": "Total Electors", "format": ","}
          
        ]
      }
    }
  ],

  "config": {
    "view": {"stroke": null},
    "axis": {
        "titleFontSize": 12,
        "labelFontSize": 11,
        "titlePadding": 8,
        "domain": false,
        "tickSize": 3,
        "gridColor": "#e5e7eb",
        "labelFont": "Nunito",
        "labelFontWeight": 300,
        "titleFont": "Nunito",
        "titleFontWeight": 600
        }
  }
}