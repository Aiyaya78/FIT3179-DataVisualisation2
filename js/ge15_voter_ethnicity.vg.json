{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "GE15 Voters by Ethnicity", "anchor": "start"},
  "width": 300,
  "height": 400,

  "data": {
    "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-DataVisualisation2/refs/heads/main/data/ge15_national.csv"
  },

  "transform": [
    {
      "fold": [
        "Malay","Chinese","Indians","Orang Asli",
        "Bumiputera Sabah","Bumiputera Sarawak","Others"
      ],
      "as": ["ethnicity","count"]
    },
    {"window": [{"op": "sum", "field": "count", "as": "total"}], "frame": [null, null]},
    {"calculate": "datum.count / datum.total", "as": "pct"}
  ],

  "layer": [
    {
      "mark": {"type": "bar", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3},
      "encoding": {
        "x": {
          "field": "ethnicity",
          "type": "nominal",
          "sort": {"field": "count", "order": "descending"},
          "axis": {"title": "Ethnicity"}
        },
        "y": {
          "field": "count",
          "type": "quantitative",
          "title": "Voters",
          "axis": {"grid": false}
        },
        "color": {"value": "#a05195"},
        "tooltip": [
          {"field": "ethnicity", "title": "Ethnicity"},
          {"field": "count", "type": "quantitative", "title": "Voters", "format": ","},
          {"field": "pct", "type": "quantitative", "title": "Share", "format": ".1%"}
        ]
      }
    },
    {
      "mark": {"type": "text", "dy": -6, "baseline": "bottom"},
      "encoding": {
        "x": {
          "field": "ethnicity",
          "type": "nominal",
          "sort": {"field": "count", "order": "descending"}
        },
        "y": {"field": "count", "type": "quantitative"},
        "text": {"field": "pct", "type": "quantitative", "format": ".1%"},
        "color": {"value": "#333"}
      }
    }
  ],

  "config": {"view": {"stroke": null}}
}