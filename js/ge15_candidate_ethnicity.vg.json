{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "GE15 Candidates by Ethnicity", "anchor": "start"},
  "width": 300,
  "height": 300,

  "data": {
    "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-DataVisualisation2/refs/heads/main/data/ge15_candidate_summary.csv"
  },

  "transform": [
    {
      "fold": [
        "Bumiputera","Chinese","Indians","Others"
      ],
      "as": ["ethnicity","count"]
    },

    {
      "calculate": "datum.ethnicity === 'Bumiputera' ? 'Indigenous' :  datum.ethnicity === 'Indians' ? 'Indian' : datum.ethnicity",
      "as": "ethnicity_en"
    },

    {"window": [{"op": "sum", "field": "count", "as": "total"}], "frame": [null, null]},
    {"calculate": "datum.count / datum.total", "as": "pct"},

    {"joinaggregate": [
      {"op": "max", "field": "pct", "as": "max_pct"}
    ]},
    {
      "calculate": "datum.pct === datum.max_pct ? 'Extreme' : ''",
      "as": "flag"
    }
  ],

  "layer": [
    {
      "mark": {"type": "bar", "cornerRadiusTopLeft": 3, "cornerRadiusTopRight": 3},
      "encoding": {
        "x": {
          "field": "ethnicity_en",          
          "type": "nominal",
          "sort": {"field": "count", "order": "descending"},
          "axis": {"title": "Ethnicity"}
        },
        "y": {
          "field": "count",
          "type": "quantitative",
          "title": "Voters",
          "axis": {"grid": false}
        },

        "color": {
          "condition": {"test": "datum.flag !== ''", "value": "#d62728"},
          "value": "#bdbdbd"
        },

        "tooltip": [
          {"field": "ethnicity_en", "title": "Ethnicity"},
          {"field": "count", "type": "quantitative", "title": "Candidates Count", "format": ","},
          {"field": "total", "type": "quantitative", "title": "Total Candidates", "format": ","},
          {"field": "pct", "type": "quantitative", "title": "Percentage of Candidates", "format": ".2%"}
        ]
      }
    }
  ],

  "config": {"view": {"stroke": null}}
}