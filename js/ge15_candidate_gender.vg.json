{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "GE15 Candidates by Gender", "anchor": "start"},
  "width": 300,
  "height": 300,

  "data": {
    "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-DataVisualisation2/refs/heads/main/data/ge15_candidate_summary.csv"
  },

  "transform": [
    {"fold": ["male_candidates", "female_candidates"], "as": ["gender_key", "candidates"]},
    {"calculate": "datum.gender_key === 'male_candidates' ? 'Male' : 'Female'", "as": "gender"},
    {"window": [{"op": "sum", "field": "candidates", "as": "total"}], "frame": [null, null]},
    {"calculate": "datum.candidates / datum.total", "as": "pct"},
    {"calculate": "datum.gender + '\\n' + format(datum.pct, '.2%')", "as": "label2line"}
  ],

  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 70},
      "encoding": {
        "theta": {"field": "candidates", "type": "quantitative"},
        "color": {
          "field": "gender",
          "type": "nominal",
          "title": null,
          "scale": {"domain": ["Male", "Female"], "range": ["#3182bd", "#e377c2"]},
          "legend":null
        },
        "tooltip": [
          {"field": "gender", "title": "Gender"},
          {"field": "candidates", "type": "quantitative", "title": "Candidates Count", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "radius": 110,
        "lineBreak": "\n",
        "fontWeight": "bold",
        "fontSize": 12,
        "align": "center",
        "baseline": "middle",
        "fill": "white"
      },
      "encoding": {
        "theta": {"field": "candidates", "type": "quantitative", "stack": true},
        "text": {"field": "label2line"}
      }
    },
    {
      "transform": [
        {"aggregate": [{"op": "sum", "field": "candidates", "as": "total_candidates"}]},
        {"calculate": "'Total Candidates\\n' + format(datum.total_candidates, ',d')", "as": "centerLabel"}
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "lineBreak": "\n",
        "fontWeight": "bold",
        "fontSize": 14
      },
      "encoding": {
        "theta": {"value": 0},
        "radius": {"value": 0},
        "text": {"field": "centerLabel"}
      }
    }
  ],

  "config": {"view": {"stroke": null}}
}