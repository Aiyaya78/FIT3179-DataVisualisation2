{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "GE15 Constituency-Level Results by Winning Party", "anchor": "start"},
  "width": "container",
  "height": "container",
  "autosize": {"type": "fit", "contains": "padding"},
  "projection": {"type": "mercator"},

  "layer": [
    {
    "params": [
        {
          "name": "classSel",
          "select": { "type": "point", "fields": ["winning_party"] },
          "bind": "legend"
        }
      ],
      "data": {
        "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-DataVisualisation2/refs/heads/main/js/parlimen.topojson",
        "format": {"type": "topojson", "feature": "parlimen.topojson"}
      },
      "transform": [
        {
          "lookup": "properties.parlimen",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-DataVisualisation2/main/data/ge15_winningANDturnout_by_constituency.csv"
            },
            "key": "id_geo",
            "fields": [
              "state",
              "code_parlimen",
              "constituency",
              "winning_party",
              "winning_majority",
              "turnout_percent"
            ]
          }
        },
        {
          "lookup": "winning_party",
          "from": {
            "data": {
              "values": [
                {"coalition": "PH", "full": "Pakatan Harapan (PH)"},
                {"coalition": "PN", "full": "Perikatan Nasional (PN)"},
                {"coalition": "BN", "full": "Barisan Nasional (BN)"},
                {"coalition": "GPS", "full": "Gabungan Parti Sarawak (GPS)"},
                {"coalition": "GRS", "full": "Gabungan Rakyat Sabah (GRS)"},
                {"coalition": "WARISAN", "full": "Parti Warisan Sabah (WARISAN)"},
                {"coalition": "IND/OTH", "full": "Independent / Others"}
              ]
            },
            "key": "coalition",
            "fields": ["full"]
          },
          "as": "winning_party_full"
        },
        {"filter": "isValid(datum.winning_party)"}  
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "winning_party",
          "type": "nominal",
          "scale": {
            "domain": ["PH", "PN", "BN", "GPS", "GRS", "WARISAN", "IND/OTH"],
            "range": ["#ea152c", "#0089fd", "#ff89c2", "#036b7e", "#af30c1", "#ffcb09", "#d2d1d6"]
          },
          "title": "Winning Party",
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "columns": 7,
            "symbolType": "square",
            "symbolSize": 300,
            "symbolStrokeWidth": 1.2,
            "title": "Winning Party",
            "titleFontSize": 14,
            "titleFontWeight": "bold",
            "titlePadding": 8,
            "labelFontSize": 12,
            "columnPadding": 16
          }
        },
        "opacity": {
          "condition": { "param": "classSel", "value": 1 },
          "value": 0.1
        },
        "tooltip": [
          {"field": "code_parlimen", "title": "Parliament Code"},
          {"field": "constituency", "title": "Constituency"},
          {"field": "state", "title": "State"},
          {"field": "winning_party_full", "title": "Winner"},
          {"field": "winning_majority", "type": "quantitative", "title": "Winning Majority", "format": ","},
          {"field": "turnout_percent", "type": "quantitative", "title": "Voter Turnout (%)", "format": ".1f"}
        ]
      }
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-DataVisualisation2/refs/heads/main/js/state.topojson",
        "format": {"type": "topojson", "feature": "state.topojson"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "#000000", "strokeWidth": 1.2}
    },

    {
      "data": {
        "values": [
          {"state": "Perlis", "lon": 99, "lat": 6.6},
          {"state": "Kedah", "lon": 99, "lat": 5.9},
          {"state": "Pulau Pinang", "lon": 99, "lat": 5.3},
          {"state": "Perak", "lon": 99, "lat": 4.7},
          {"state": "Selangor", "lon": 99, "lat": 3.6},
          {"state": "Negeri Sembilan", "lon": 99, "lat": 2.5},
          {"state": "Melaka", "lon": 99, "lat": 2.15},
          {"state": "Sarawak", "lon": 113, "lat": 4.4},
          {"state": "Sabah", "lon": 113, "lat": 6.2},
          {"state": "W.P. Labuan", "lon": 113, "lat": 5.3},
          {"state": "W.P. Kuala Lumpur", "lon": 99, "lat": 3.2},
          {"state": "W.P. Putrajaya", "lon": 99, "lat": 2.9}
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "normal",
        "align": "right",
        "baseline": "middle",
        "fill": "black"
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "state"}
      }
    },

    {
      "data": {
        "values": [
          {"state": "Johor", "lon": 105, "lat": 1.8},
          {"state": "Pahang", "lon": 105, "lat": 3.4},
          {"state": "Terengganu", "lon": 105, "lat": 5.0},
          {"state": "Kelantan", "lon": 105, "lat": 6.1}
          
          
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 10,
        "fontWeight": "normal",
        "align": "left",
        "baseline": "middle",
        "fill": "black"
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "state"}
      }
    },
    {
    "data": {
        "values": [
        {"lon1": 100.18, "lat1": 6.6, "lon2": 99.0, "lat2": 6.6},
        {"lon1": 100.35, "lat1": 5.9, "lon2": 99.0, "lat2": 5.9},
        {"lon1": 100.17, "lat1": 5.3, "lon2": 99.0, "lat2": 5.3},
        {"lon1": 100.6, "lat1": 4.7, "lon2": 99.0, "lat2": 4.7},
        {"lon1": 101.1, "lat1": 3.6, "lon2": 99.0, "lat2": 3.6},
        {"lon1": 101.82, "lat1": 2.5, "lon2": 99.0, "lat2": 2.5},
        {"lon1": 102.3, "lat1": 2.15, "lon2": 99.0, "lat2": 2.15},
        {"lon1": 101.65, "lat1": 3.2, "lon2": 99.0, "lat2": 3.2},
        {"lon1": 101.67, "lat1": 2.9, "lon2": 99.0, "lat2": 2.9},
        {"lon1": 113.95, "lat1": 4.4, "lon2": 113.0, "lat2": 4.4},
        {"lon1": 116.2, "lat1": 6.2, "lon2": 113.0, "lat2": 6.2},
        {"lon1": 115.15, "lat1": 5.3, "lon2": 113.0, "lat2": 5.3},
