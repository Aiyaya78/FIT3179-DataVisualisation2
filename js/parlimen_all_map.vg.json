        {"lon1": 100.18, "lat1": 6.6, "lon2": 99.5, "lat2": 6.6},
        {"lon1": 100.35, "lat1": 5.9, "lon2": 99.5, "lat2": 5.9},
        {"lon1": 100.17, "lat1": 5.3, "lon2": 99.5, "lat2": 5.3},
