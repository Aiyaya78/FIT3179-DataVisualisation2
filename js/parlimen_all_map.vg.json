        {"lon1": 102.4, "lat1": 6.1, "lon2": 104.5, "lat2": 6.1}
        ]
    },
    "mark": {"type": "rule", "stroke": "#878787", "strokeWidth": 0.8},
    "encoding": {
        "longitude": {"field": "lon1"},
        "latitude": {"field": "lat1"},
        "longitude2": {"field": "lon2"},
        "latitude2": {"field": "lat2"}
    }
    }
  ],
  "config": {
    "legend": {
      "labelFont": "Nunito",
      "labelFontWeight": 500
    }
  }
}