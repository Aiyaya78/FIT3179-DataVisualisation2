      "mark": {
        "type": "text",
        "fontSize": 9,
        "fontWeight": "normal",
        "align": "left",
        "baseline": "middle",
        "fill": "black"
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "text": {"field": "state"}
      }
    },
    {
    "data": {
