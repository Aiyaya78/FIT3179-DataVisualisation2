{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
  "height": 200,
  "autosize": {"type": "fit-x", "resize": true},

  "data": {
    "url": "https://raw.githubusercontent.com/Aiyaya78/FIT3179-DataVisualisation2/refs/heads/main/data/ge15_national.csv"
  },

  "transform": [
    {"fold": ["male_electors", "female_electors"], "as": ["gender_key", "voters"]},
    {"calculate": "datum.gender_key === 'male_electors' ? 'Male' : 'Female'", "as": "gender"},
    {"window": [{"op": "sum", "field": "voters", "as": "total"}], "frame": [null, null]},
    {"calculate": "datum.voters / datum.total", "as": "pct"},
    {"calculate": "datum.gender + '\\n' + format(datum.pct, '.2%')", "as": "label2line"}
  ],

  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 50},
      "encoding": {
        "theta": {"field": "voters", "type": "quantitative"},
        "color": {
          "field": "gender",
          "type": "nominal",
          "title": null,
          "scale": {"domain": ["Male", "Female"], "range": ["#ff5b03", "#0032ba"]},
          "legend":null
        },
        "tooltip": [
          {"field": "gender", "title": "Gender"},
          {"field": "voters", "type": "quantitative", "title": "Electors Count", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "radius": 75,
        "lineBreak": "\n",
        "fontWeight": 500,
        "fontSize": 10,
        "align": "center",
        "baseline": "middle",
        "fill": "white",
        "font": "Nunito"
      },
      "encoding": {
        "theta": {"field": "voters", "type": "quantitative", "stack": true},
        "text": {"field": "label2line"}
      }
    },
    {
      "transform": [
        {"aggregate": [{"op": "sum", "field": "voters", "as": "total_voters"}]},
        {"calculate": "'Total Electors\\n' + format(datum.total_voters, ',d')", "as": "centerLabel"}
      ],
      "mark": {
        "type": "text",
        "align": "center",
        "baseline": "middle",
        "lineBreak": "\n",
        "fontWeight": 700,
        "fontSize": 12,
        "font": "Nunito"
      },
      "encoding": {
        "theta": {"value": 0},
        "radius": {"value": 0},
        "text": {"field": "centerLabel"}
      }
    }
  ],

  "config": {"view": {"stroke": null}}
}